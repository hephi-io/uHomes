{
  "name": "uhomes",
  "private": true,
  "version": "1.0.0",
  "description": "uHomes monorepo",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "api:dev": "turbo dev --filter=@uhomes/api",
    "web:dev": "turbo dev --filter=@uhomes/web",
    "landing:dev": "turbo dev --filter=@uhomes/landing"
  },
  "devDependencies": {
    "turbo": "^2.5.1",
    "prettier": "^3.4.2",
    "@types/node": "^24.7.2"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
