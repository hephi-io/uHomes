{
  "extends": "@uhomes/typescript-config/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {
      "@uhomes/shared": ["../../packages/shared/src"],
      "@api/*": ["src/*"],
      "@cert/*": ["cert/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "tests"]
}
